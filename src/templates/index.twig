<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Qafoo Code Review Tool{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="/styles/bootstrap.css" rel="stylesheet">
    <link href="/styles/bootstrap-responsive.css" rel="stylesheet">
    <link href="/styles/app.css" rel="stylesheet">

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="/">Qafoo CRT</a>
                    <div class="nav">
                        <ul class="nav">
                            <li><a href="/"><i class="icon-home"></i> Home</a></li>
                            <li><a href="/source"><i class="icon-file"></i> Source</a></li>
                            {% block navItems %}{% endblock %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div id="content" class="row">
            <div class="span12">
            {% block content %}
                <div class="alert">
                    <h1>Please extend from this templateâ€¦</h1>
                </div>
            {% endblock %}
            </div>
        </div>
        <div class="row">
            {% block footer %}
            <div class="span12 footer">
                <hr />
                &copy; <a href="http://qafoo.com/">Qafoo GmbH</a> 2012, Licensed under AGPLv3
            </div>
            {% endblock %}
        </div>
    </div>

    <script type="text/javascript" src="/scripts/vendor/jquery/jquery-1.7.2.js"></script>
    <!-- script type="text/javascript" src="/scripts/vendor/jquery/jquery-1.7.2.min.js"></script -->
    <script type="text/javascript" src="/scripts/vendor/jquery/jquery.form.js"></script>
    <script type="text/javascript" src="/scripts/vendor/datatables/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/scripts/vendor/datatables/jquery.dataTables.paging.min.js"></script>
    
    <script type="text/javascript">
        // Does not seem to work :(
        $.extend( $.fn.dataTableExt.oStdClasses, {
            "sWrapper": "dataTables_wrapper form-inline"
        } );

        $(document).ready(function() {
            $('.data-table').dataTable({
                "sDom": "<'row'<'span9'l><'span3'f>r>t<'row'<'span3'i><'span9'p>>",
                "sPaginationType": "bootstrap",
                "aLengthMenu": [[10, 30, 50, 100, -1], [10, 30, 50, 100, "All"]]
            });
        } );
    </script>

    <script type="text/javascript" src="/scripts/vendor/bootstrap/bootstrap.js"></script>
    <!-- script type="text/javascript" src="/scripts/vendor/bootstrap/bootstrap.min.js"></script -->

    <script type="text/javascript" src="/scripts/crt.js"></script>
</body>
</html>
