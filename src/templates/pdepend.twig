{% extends "overview.twig" %}

{% block content %}
<h1>PDepend</h1>

<form method="GET">
<h2>Classes</h2>
{% set metrics = classMetrics %}
{% set top     = classTop %}
{% set cloud   = class %}
{% set name    = "class" %}
{% include 'pdepend_tagcloud.twig' %}

<h2>Methods</h2>
{% set metrics = methodMetrics %}
{% set top     = methodTop %}
{% set cloud   = method %}
{% set name    = "method" %}
{% include 'pdepend_tagcloud.twig' %}
</form>

<div class="row">
    <div class="span6">
        <div class="well">
            {% autoescape false %}{{pyramid}}{% endautoescape %}
        </div>
    </div>
    <div class="span6">
        <div class="well">
            {% autoescape false %}{{jdepend}}{% endautoescape %}
        </div>
    </div>
</div>

{% endblock %}
